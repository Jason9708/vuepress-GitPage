.home .hero .action-button{
    padding: 0.5rem 2.5rem;
}

.hero{
    display: block;
    position: relative;
    background: #171717;
    margin:100px auto;
    padding:30px;
    border-radius: 10px;
    width: 600px;
}
.hero img{
    position: absolute;
    border-radius:10px; 
    top:-70px;
    left:-20px;
}
#main-title{
    text-align: right;
    margin:20px;  
    color:#4BDB80;  
}
.home .hero .description{
    text-align: right;
    color:#EDFBF2;
    font-weight: 100;
    font-size:1.0rem;
    margin:10px;
    padding-right:45px;
}
.action{
    text-align: right;
    padding-right:40px;
}

.home .feature{
    max-width:100%;    
}